<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".PayClientActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_client_name_pay"
                android:text="Sample Name"
                android:padding="16dp"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_current_product_pay"
                    android:text="CrossFit"
                    android:paddingLeft="16dp" />
                <View
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_last_paid_pay"
                    android:text="Last paid until:27-12-2018"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment information"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_from"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="from"
                        android:focusableInTouchMode="false"
                        android:id="@+id/ev_from"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_to"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="to"
                        android:focusableInTouchMode="false"
                        android:id="@+id/ev_to"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_product"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="product"
                        android:id="@+id/actv_product"
                        android:ems="10"
                        android:completionThreshold="0"
                        />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_price"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="price USD"
                        android:inputType="numberDecimal"
                        android:id="@+id/ev_price"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_margin="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#9c9c9c"
                android:id="@+id/bt_submit_pay"/>

        </LinearLayout>




    </ScrollView>

</LinearLayout>