<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".PayClientActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_client_name_pay"
                android:text="Sample Name"
                android:padding="16dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_payment_on_record"
                android:textSize="12sp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:paddingBottom="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_current_product_pay"
                    android:text="@string/none"
                    android:paddingLeft="16dp"
                    android:layout_marginRight="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_last_paid_pay"
                    android:text="@string/never"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/payment_information"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center|center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_from"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/from"
                        android:focusableInTouchMode="false"
                        android:id="@+id/ev_from"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_to"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/to"
                        android:focusableInTouchMode="false"
                        android:id="@+id/ev_to"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_product"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/product"
                        android:id="@+id/actv_product"
                        android:ems="10"
                        android:completionThreshold="0"
                        />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/lo_price"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price_usd"
                        android:inputType="numberDecimal"
                        android:id="@+id/ev_price"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:layout_margin="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/bt_submit_pay"/>

        </LinearLayout>




    </ScrollView>

</LinearLayout>