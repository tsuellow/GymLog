<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/basic_settings">

        <SwitchPreference
            android:title="@string/use_front_camera"
            android:defaultValue="true"
            android:key="camera"/>

        <Preference
            android:title="@string/change_pin"
            android:defaultValue="1234"
            android:key="changepin"
            android:summary="@string/reset_pin_summay"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/backup_setup">

        <EditTextPreference
            android:defaultValue="192.168.1.6"
            android:key="serverip"
            android:title="@string/server_ip"/>
    </PreferenceCategory>

</PreferenceScreen>